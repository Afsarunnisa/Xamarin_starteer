<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="Started_App.Views.SignUpPage">
	<ContentPage.Content>

        <StackLayout Spacing="20" x:Name="layout">

             <StackLayout  Spacing="20" >
                <Label Text="Name" FontSize="20" 
                 VerticalOptions="Center" FontAttributes="Bold" />
                <Entry TextColor="Black" Text="{Binding SignUpUserObject.firstName}"
                  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>

             <StackLayout  Spacing="20" >
                <Label Text="Email" FontSize="20" 
                 VerticalOptions="Center" FontAttributes="Bold" />
                <Entry TextColor="Black" Text="{Binding SignUpUserObject.email}"
                  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
            
            <StackLayout  Spacing="20" >
                <Label Text="User Name" FontSize="20" 
                 VerticalOptions="Center" FontAttributes="Bold" />
                <Entry TextColor="Black" Text="{Binding SignUpUserObject.username}"
                  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>

              <StackLayout  Spacing="20" >
                <Label Text="Password" FontSize="20" 
                 VerticalOptions="Center" FontAttributes="Bold" />
                <Entry TextColor="Black" Text="{Binding SignUpUserObject.password}"
                  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>

               <Button x:Name = "SignButton" Text="SignUp" TextColor="White" BackgroundColor=
"#77D065" Command="{Binding SignUpBtnCommand}" VerticalOptions="End"/>
            
        </StackLayout>
        
	</ContentPage.Content>
</ContentPage>
